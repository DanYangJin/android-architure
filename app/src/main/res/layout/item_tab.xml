<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备商城"
        android:textColor="@color/color_black_666"
        android:textSize="@dimen/size_32" />

    <ImageView
        android:id="@+id/tab_icon"
        android:layout_width="@dimen/common_dp_18"
        android:layout_height="@dimen/common_dp_10"
        android:layout_marginLeft="@dimen/common_dp_10"
        android:src="@mipmap/ic_arrow_down_black"
        android:visibility="visible"
        android:contentDescription="@null"/>

</LinearLayout>


