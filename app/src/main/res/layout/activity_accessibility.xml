<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.shouzhan.design.base.Presenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/open_accessibility_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="@{(view) -> presenter.onClick(view)}"
            android:text="开通辅助功能"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/accessibility_find_and_click_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="@{(view) -> presenter.onClick(view)}"
            android:text="模拟辅助功能点击View"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/open_accessibility_setting_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/accessibility_find_and_click_btn"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="哈哈开关"/>

            <CheckBox
                android:id="@+id/left_sample_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哔哔哔开关"/>

            <CheckBox
                android:id="@+id/center_sample_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啦啦啦开关"/>

            <CheckBox
                android:id="@+id/right_sample_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啊啊啊开关"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>