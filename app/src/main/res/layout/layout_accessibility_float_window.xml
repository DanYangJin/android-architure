<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_voice_diagnosis_loading"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/voice_diagnosis_loading_anim" />

    <TextView
        android:id="@+id/voice_diagnosis_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="正在努力优化中"
        android:textColor="#333333"
        android:textSize="@dimen/size_20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/voice_diagnosis_tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="大概需要1-2分钟时间，请勿触碰手机以防优化失败"
        android:textColor="@color/color_black_666"
        android:textSize="@dimen/size_20" />

    <ProgressBar
        android:id="@+id/voice_diagnosis_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dp_40"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_accessibility" />

</LinearLayout>